{
	"name": "Transmission",
	"id": "transmission",
	"packaging_format": 1,
	"description": {
		"en": "A Fast, Easy, and Free BitTorrent Client",
		"fr": "Un client BitTorrent libre et rapide"
	},
	"version": "1.0~ynh1",
	"url": "https://www.transmissionbt.com/",
	"license": " GPL-3.0",
	"maintainer": {
        	"name": "YunoHost Contributors",
        	"email": "apps@yunohost.org"
	},
	"requirements": {
		"yunohost": ">= 3.2"
	},
	"multi_instance": false,
	"services": [
		"nginx",
		"transmission-daemon"
	],
	"arguments": {
		"install": [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain for Transmission"
				},
				"example": "domain.org"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
					"en": "Choose a path for Transmission"
				},
				"example": "/torrent",
				"default": "/torrent"
			}
		]
	}
}
